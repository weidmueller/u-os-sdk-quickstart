{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. -DCMAKE_INSTALL_PREFIX=${env:SDKTARGETSYSROOT}/usr -DCMAKE_STAGING_PREFIX=${env:SDKTARGETSYSROOT}/usr",
            "problemMatcher": [],
            "group" : "build"
        },
        {
            "label": "make",
            "type": "shell",
            "command": "cd build && make",
            "problemMatcher": [],
            "group" : "build"
        }, 
        {
            "label": "make clean",
            "type": "shell",
            "command": "cd build && make clean",
            "problemMatcher": []
        },
        {
            "label": "clean build folder",
            "type": "shell",
            "command": "cd build && rm -r *",
            "problemMatcher": []
        },
        {
            "label": "remote gdb server io",
            "type": "shell",
            "command": "scp build/example_io example_io_root admin@192.168.0.101:/tmp/ && ssh admin@192.168.0.101 '/tmp/example_io_root'",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "Listening on port",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Remote debugging from host",
                    "endsPattern": "."
                }
            },
            "group": "test"
        },
        {
            "label": "copy example io to target",
            "type": "shell",
            "command": "scp build/example_io admin@192.168.0.101:/tmp",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "group": "test"
        }
    ]
}